{
    "manifest_version": 2,

    "name": "Cape - Super Powered Ctrl-F",
    "description": "Ask a question and Cape will find it in the current page.",
    "version": "0.1",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "cape.html",
        "default_title": "Cape - Super Powered Ctrl-F"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["mark.js", "content.js"]
    }],

    "commands": {
		"_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+F"
            }
        }
	},

    "permissions": [
        "activeTab",
        "tts",
        "storage",
        "<all_urls>"
    ]
}
