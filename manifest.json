{
    "manifest_version": 2,

    "name": "Cape - Super Powered Ctrl-F",
    "description": "The Cape extension lets you use Bloomsbury AI's machine reading technology to ask natural language questions of the current web page.",
    "version": "0.1",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "cape.html",
        "default_title": "Cape - Super Powered Ctrl-F"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["mark.js", "content.js"]
    }],

    "permissions": [
        "activeTab",
        "tts",
        "<all_urls>"
    ]
}
